@import "colours.pcss";

.sudoku-monster {
  display: flex;
  flex-direction: column;
  align-items: center;

  width: 100vw;
  height: 100vh;

  &__banner {
    display: flex;
    justify-content: center;
    width: 100%;

    background: $light-purple;
    color: white;
  }

  &__game {
    display: flex;
    justify-content: space-evenly;
    align-items: center;

    width: 100%;
    height: 100%;
  }
}


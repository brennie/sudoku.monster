.cell {
  background: #fff;
  cursor:pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 2em;
  width: 2em;
  user-select: none;

  &__input {
    color: #6495ed;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  &--focused {
    background-color: rgba(255, 215, 0, 0.5);
  }
}
